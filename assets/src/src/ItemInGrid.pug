table.w3-table.w3-centered.w3-border.w3-bordered.w3-hoverable
    thead
        tr
            th No
            th ID
            th Waktu
            th SKU
            th Nama Barang
            th Jumlah Pemesanan
            th Jumlah Diterima
            th Harga Beli
            th Total
            th Nomer Kwitansi
            th Catatan
            th Actions
    tbody
        | {{range $index, $itemIn := .}}
        tr
            td \#{{$index}}
            td(id="td-{{$index}}-id") {{$itemIn.ID}}
            td(id="td-{{$index}}-time") {{convertToUITime $itemIn.Time}}
            td(id="td-{{$index}}-sku") {{$itemIn.SKU}}
            td {{$itemIn.Name}}
            td(id="td-{{$index}}-amount-orders") {{$itemIn.AmountOrders}}
            td(id="td-{{$index}}-amount-received") {{$itemIn.AmountReceived}}
            td(id="td-{{$index}}-purchase-price") {{$itemIn.PurchasePrice}}
            td {{$itemIn.Total}}
            td(id="td-{{$index}}-receipt-number") {{$itemIn.ReceiptNumber}}
            td(id="td-{{$index}}-notes") {{$itemIn.Notes}}
            td
                include BaseAction.pug
        | {{end}}